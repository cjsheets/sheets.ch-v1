{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "module": "es2015",
    "moduleResolution": "Node",
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": false
  },
  "moduleResolution": "node",
  "include": [
    "src",
    "test"
  ]
}