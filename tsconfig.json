{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
  },
  "include": [
    "src",
    "@types",
    "node_modules/@types"
  ]
}
